#numpad
  margin: 0
  padding: 0
  font: 71%/1.5 Verdana, Sans-Serif
  background: #eee
  margin: 20px auto
  width: 180px
  list-style: none

  li
    float: left
    margin: 0 5px 5px 0
    width: 40px
    height: 40px
    line-height: 40px
    text-align: center
    background: #fff
    border: 1px solid #f9f9f9
    -moz-border-radius: 5px
    -webkit-border-radius: 5px

    &.zero,&.delete
      width: 87px

    &.lastitem
      margin-right: 0

    &:hover
      position: relative
      top: 1px
      left: 1px
      border-color: #e5e5e5
      cursor: pointer
		
