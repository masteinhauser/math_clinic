#login(data-role="page")
  div(data-role="header")
    h1= title
  div(data-role="content")
    if(typeof(result) != 'undefined' && result.success == true)
      p You have been logged in!
    else
      p Please login: 
      form(action=basepath+"/login", method="post")
        p User:
          input(type="text", name="username", value=config.guest.user)
        p Pass:
          input(type="password", name="password", value=config.guest.pass)
        p
          input(type="submit", name="submit", value="Login")
