    h1= title
  div(data-role="content")
    script(type='text/javascript')
      $('#login-form').submit(function(){
        var url = "#{basepath}"+"/login";
        var data = $('#login-form').serialize();
        $.post(url, data, function(){
          window.location = "#{basepath}"+"/";
        });
        return false;
      });
